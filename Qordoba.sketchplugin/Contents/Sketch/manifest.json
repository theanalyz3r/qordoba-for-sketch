{
  "name": "Qordoba i18n",
  "description": "Integration with Qordoba Translation Platform",
  "author": "Qordoba",
  "homepage": "https://qordoba.com",
  "version": 2.7,
  "identifier": "com.qordoba.sketch.plugin",
  "disableCocoaScriptPreprocessor": false,
  "commands": [
    {
      "name": "Login / Logout",
      "identifier": "login",
      "script": "authenticate.js",
      "shortcut": ""
    },
    {
      "name": "Upload Current Page to Qordoba",
      "identifier": "uploadcurrentpage",
      "shortcut": "cmd alt 5",
      "script": "upload-current-page.js"
    },
    {
      "name": "Download Translation for Current Page",
      "identifier": "translatecurrentpage",
      "shortcut": "cmd alt 6",
      "script": "translate-current-page.js"
    },
    {
      "name": "Default Language Settings",
      "identifier": "language_config",
      "shortcut": "cmd alt 9",
      "script": "config.js"
    },
    {
      "name": "Report a bug",
      "identifier": "support",
      "script": "support.js",
      "shortcut": ""
    },
    {
      "name": "Check for updates",
      "identifier": "updates",
      "script": "updates.js",
      "shortcut": ""
    },
    {
      "name": "Set Selected Layer MaxWidth",
      "identifier": "max_width",
      "script": "misc.js",
      "shortcut": "cmd alt k",
      "handler" : "onMaxWidth"
    },
    {
      "name": "Spec export",
      "identifier": "spec-export",
      "shortcut": "ctrl shift f",
      "handler": "specExport",
      "script": "misc.js"
    }
  ],
  "menu" : {
  "title": "Qordoba",
  "items": [
    "login",
    "uploadcurrentpage",
    "translatecurrentpage",
    "-",
    "language_config",
    "max_width",
    {
       "title": "Support & Updates",
       "items": [
         "support",
         "updates"
       ]
     }
    ]
  }
}
